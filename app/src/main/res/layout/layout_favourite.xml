<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/favRecyclerview"
        android:scrollbars="vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >


        <ImageView
            android:id="@+id/imagePhone"
            android:layout_width="120dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagePhone"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/long_press_to_add_the_favorite"
            android:textSize="15sp" />

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/star_button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_marginEnd="140dp"
            android:layout_marginTop="60dp"
            app:sparkbutton_activeImage="@drawable/icon"
            app:sparkbutton_animationSpeed=".85"
            app:sparkbutton_iconSize="20dp"
            app:sparkbutton_inActiveImage="@drawable/badge_icon_inactive" />


        <ImageView
            android:id="@+id/handImage"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="96dp"
            android:layout_marginTop="73dp"
            android:src="@drawable/hand_yellow" />

    </RelativeLayout>



</RelativeLayout>